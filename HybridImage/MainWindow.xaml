<Window x:Name="windowMain" x:Class="HybridImage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hybrid Image" Height="380" Width="525" Loaded="WindowMain_Loaded">
    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="152" Width="314">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Stroke="Black"/>
            <Rectangle Grid.Column="2" Stroke="Black"/>
            <Image x:Name="imageA" Grid.Column="0" Margin="1" Source="Images/einstein.bmp"/>
            <Image x:Name="imageB" Grid.Column="2" Margin="1" Source="Images/marilyn.bmp"/>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,172,0,0" Height="152" Width="303">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Stroke="Black" Margin="0,0,0,0"/>
            <Rectangle Grid.Column="1" Stroke="Black" Margin="-1,0,0,0"/>
            <Image x:Name="imageC" Grid.Column="0" Margin="1,1,1,1" Source="Images/einstein.bmp"/>
            <Image x:Name="imageD" Grid.Column="1" Margin="0,1,1,1" Source="Images/marilyn.bmp"/>
        </Grid>
    </Grid>
</Window>
